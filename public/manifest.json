{
  "manifest_version": 3,
  "name": "Are my Instagram subscriptions mutual?",
  "version": "0.1.0",
  "description": "Detect if your Instagram subscriptions are mutual.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "Are my Instagram subscriptions mutual?",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ],
      "css" : ["contentScript.css"]
    }
  ]
}